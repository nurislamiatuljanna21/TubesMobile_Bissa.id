<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PesananCuset">
    <FrameLayout
        android:id="@+id/frame_layanancuker"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#3C91E6">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginVertical="13dp"
            android:text="Pesanan"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40sp" />
    </FrameLayout>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="15dp"
        android:id="@+id/card_money"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="10dp">

        <TextView
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="130dp"
            android:text="Cuci Setrika"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="22dp" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/gambar_money"

        android:layout_width="100dp"
        android:layout_height="96dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="12dp"
        android:contentDescription="@string/description"
        android:src="@drawable/washing_machine" />
    <Button
        android:id="@+id/button_login"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#3C91E6"
        android:text="Buat Pesanan"/>
</LinearLayout>